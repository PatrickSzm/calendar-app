generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  events Event[]
}

model Event {
  id     Int      @id @default(autoincrement())
  name   String
  date   DateTime
  time   String
  userId Int
  user   User     @relation(fields: [userId], references: [id])
}
